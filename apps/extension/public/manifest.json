{
  "manifest_version": 3,
  "name": "AutoPrompt Optimizer",
  "version": "1.0.0",
  "description": "An AI prompt optimizer as a browser extension that runs locally, ensuring personalization, privacy, and efficiency.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "offscreen"
  ],
  "host_permissions": [
  "*://chatgpt.com/*", 
  "*://chat.openai.com/*", 
  "<all_urls>"
],
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": "icons/icon-16.png"
  },
  "background": {
    "service_worker": "src/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://chatgpt.com/*", 
        "*://chat.openai.com/*"],
      "js": ["src/content-script.ts"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "public/options.html",
    "open_in_tab": true
  }
}