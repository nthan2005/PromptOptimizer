{
    "manifest_version": 3,
    "name": "Prompt Optimizer",
    "version": "0.1.0",
    "description": "Privacy-first prompt optimization for ChatGPT and similar sites",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "storage",
      "offscreen"
    ],
    "host_permissions": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*"
    ],
    "background": {
      "service_worker": "src/background/service-worker.ts",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": [
          "https://chat.openai.com/*",
          "https://chatgpt.com/*"
        ],
        "js": ["src/content/content-script.ts"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "src/popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
      }
    },
    "options_page": "src/options/options.html",
    "web_accessible_resources": [
      {
        "resources": ["src/offscreen/offscreen.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }