{
  "private": true,
  "name": "prompt-optimizer",
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "fmt": "prettier -w ."
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
